<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="110dp"
        app:cardBackgroundColor="#8C8875"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/dsd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="#7D973F"
            android:orientation="vertical"

            tools:ignore="ExtraText" >

            <EditText
                android:id="@+id/contrasena"
                android:layout_width="330sp"
                android:layout_height="48sp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="265dp"
                android:layout_marginEnd="18dp"
                android:text="@string/app_contraseña"
                android:inputType="numberPassword"
                android:textColor="@color/white"
                android:hint="@string/app_contraseña"
                android:autofillHints="password"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/MiMatePres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="35dp"
            android:textSize="20sp"
            android:text="@string/presentation1"
            android:textColor="#300271" />

        <EditText
            android:id="@+id/correo"
            android:layout_width="330sp"
            android:layout_height="48sp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="18dp"
            android:autofillHints="emailAddress"
            android:inputType="textEmailAddress"
            android:hint="@string/app_correo"
            android:text="@string/app_correo"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:visibility="visible"
            tools:visibility="visible" />


        <Button
            android:id="@+id/btn_ingresar"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="330dp"
            android:layout_marginEnd="18dp"
            android:backgroundTint="#10530B"
            android:text="@string/app_ingresar"
            android:visibility="visible"
            app:strokeColor="#3E1010"
            tools:visibility="visible" />

    </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
