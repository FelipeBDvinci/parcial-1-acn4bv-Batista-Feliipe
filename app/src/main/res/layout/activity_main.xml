<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:orientation="vertical"
    android:background="#345711"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/imagesmate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/app_name"
        android:textColor="#0C0909"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"

        android:text="@string/app_presentation"
        android:textColor="#0C0909"
        android:textSize="18sp" />

    <Button
        android:id="@+id/PasarActivity01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="125dp"
        android:layout_marginEnd="130dp"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="150dp"


        android:text="@string/PasarActivity01" />


</LinearLayout>

